{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "inlineSources": true,
    "typeRoots": [
      "./types"
    ]
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
